{
  "info": {
    "name": "Payment API Tests - Mock",
    "_postman_id": "cleilson-mock-tests",
    "description": "Testes para API mockada local (json-server)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', () => {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Status ok', () => {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.equal('ok');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/ping",
          "host": ["{{base_url}}"],
          "path": ["ping"]
        }
      },
      "response": []
    },
    {
      "name": "Listar Transações",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', () => {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Array de transações', () => {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/transactions",
          "host": ["{{base_url}}"],
          "path": ["transactions"]
        }
      },
      "response": []
    },
    {
      "name": "Criar Transação",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 201', () => {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('ID gerado', () => {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.be.a('string');",
              "});",
              "",
              "pm.test('Amount correto', () => {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.amount).to.equal(15000);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 15000,\n  \"currency\": \"BRL\",\n  \"payment_method\": \"credit_card\",\n  \"status\": \"approved\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{base_url}}/transactions",
          "host": ["{{base_url}}"],
          "path": ["transactions"]
        }
      },
      "response": []
    }
  ]
}